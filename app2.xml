<icegrid>
  <application name="DemoApp">
    <node name="DemoNode">
      <icebox id="DemoBox" exe="/usr/local/bin/icebox" activation="on-demand">
        <properties>
          <property name="IceBox.UseSharedCommunicator.ServiceA" value="1"/>
          <property name="IceBox.UseSharedCommunicator.ServiceB" value="1"/>
        </properties>
        <env>LD_LIBRARY_PATH=./</env>
        <service name="ServiceA" entry="DemoService:create">
           <adapter name="ServiceA" id="ServiceA"/>
        </service>
        <service name="ServiceB" entry="DemoService:create">
           <adapter name="ServiceB" id="ServiceB"/>
        </service>
      </icebox>
    </node>
  </application>
</icegrid>
